pipeline {
    agent any
    
    triggers {
        cron('*/5 * * * *')  // Runs the pipeline every 5 minutes
    }

    stages {
        stage('Monitor System') {
            steps {
                script {
                     sh "git clone https://github.com/Shiva833215/alert.git"

                     sh '''
                       cd alert
                       sh script.sh
                         '''
                    
                }
            }
        }
    }
}

